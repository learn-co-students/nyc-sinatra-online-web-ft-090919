
<% if @figure %>

  <form class="" action="/figures/<%= @figure.id %>" method="post">
    <input type="hidden" name="_method" value="PATCH">

    <label for="figure_name"></label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>"/>

    <label for="figure_title">Titles</label>

    <% Title.all.each do |title| %>
      <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>><%= title.name %>
    <% end %>

    <label for="new_figure_title">Create New Title</label>
    <input type="text" id="new_title" name="title[name]" />

    <label for="landmarks">Landmarks</label>
    <% Landmark.all.each do |landmark| %>
      <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
    <% end %>


    <label for="new_landmark">Create New Landmark</label>
    <input type="text" id="new_landmark" name="landmark[name]" />
    <input type="text" id="landmark_year_completed" name="landmark[year_completed]" />


    <input type="submit" value="Edit Figure">


  </form>

<% else %>

  <h1>Figure not found!</h1>

<% end %>
