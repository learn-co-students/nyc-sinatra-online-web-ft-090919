<h2>Edit Historical Landmark</h2>

<% if @landmark %>

<form class="" action="/landmarks/<%= @landmark.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH">

  <label for="name">Name: </label>
  <input type="text" id="name" name="landmark[name]" value="<%= @landmark.name %>" /><br>

  <label for="landmark_year_completed">Year Completed</label>
  <input type="text" id="year_completed" name="landmark[year_completed]" value="<%= @landmark.year_completed.to_s %>"/><br>

  <input type="submit" value="Edit Landmark">
</form>


<% else %>

  <h1>Landmark Not Found!</h1>

<% end %>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
